<UserControl x:Class="LiveSplitEditor.Controls.AttemptSegments"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:designData="clr-namespace:LiveSplitEditor.DesignData"
			 mc:Ignorable="d"
			 d:DesignHeight="250" d:DesignWidth="800"
			 d:Background="White"
			 d:DataContext="{x:Static designData:Attempts.CompletedAttempt}">
	<DataGrid ItemsSource="{Binding Segments}" AutoGenerateColumns="False"
			  CanUserAddRows="False" CanUserDeleteRows="False">
		<DataGrid.Columns>
			<DataGridTextColumn Header="#" Binding="{Binding Segment.Number, FallbackValue=''}" IsReadOnly="True" />
			<DataGridTextColumn Header="Name" Binding="{Binding Segment.Name, FallbackValue=''}" Width="*" IsReadOnly="True" />
			<DataGridTextColumn Header="Segment Time" Binding="{Binding AttemptTime, FallbackValue='No Time'}" MinWidth="100" />
			<DataGridTextColumn Header="Best Segment Time" Binding="{Binding Segment.BestSegmentTime, FallbackValue=''}" MinWidth="100" IsReadOnly="True" />
			<DataGridTextColumn Header="+/- Gold Split" Binding="{Binding GoldSplitDelta}" MinWidth="100" IsReadOnly="True" />
		</DataGrid.Columns>
	</DataGrid>
</UserControl>