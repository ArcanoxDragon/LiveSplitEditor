<Window x:Class="LiveSplitEditor.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:pages="clr-namespace:LiveSplitEditor.Pages"
		xmlns:designData="clr-namespace:LiveSplitEditor.DesignData"
		mc:Ignorable="d"
		d:DataContext="{x:Static designData:SplitFiles.TestSplitFile}"
		Title="Split Editor" Height="450" Width="800">

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open Split File..." InputGestureText="Ctrl+O" />
			</MenuItem>
		</Menu>

		<TabControl>
			<TabItem Header="Segments">
				<pages:SegmentsTab />
			</TabItem>

			<TabItem Header="Attempts">
				<pages:AttemptsTab />
			</TabItem>
		</TabControl>
	</DockPanel>
</Window>